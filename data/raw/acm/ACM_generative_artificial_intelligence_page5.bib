title = {Syntax-CLNP: Syntax-Aware Contrastive Learning with Prototype Networks for Low-Resource NER},
year = {2025},
isbn = {9798400716027},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3766918.3766938},
doi = {10.1145/3766918.3766938},
abstract = {The low-resource named entity recognition (NER) task faces the dual challenges of sparse annotation data and under-utilised syntactic structures. In this paper, we propose the Syntax-CLNP model, which solves the above problems through two core innovations: firstly, we design the Syntax-Aware Adapter, which dynamically injects dependent syntactic features by using differentiable syntactic projectors to realise semantic-syntactic collaborative characterisation; secondly, we propose the Contrastive Prototype Alignment (CPA) mechanism, which integrates contrastive learning and prototype network to strengthen the syntactic structure by gradient decoupling and enhance the syntactic structure through gradient decoupling. Prototype Alignment (CPA) mechanism is proposed, which integrates contrastive learning and prototype network, and strengthens intra-class feature compactness and inter-class separation through gradient decoupling to suppress noise interference. The experimental results show that on low resource datasets such as LingNER-40 (40 languages) and WikiANN, the F1 value of Syntax-CLNP is improved by 8.7\% on average compared with the baseline model (p&lt;0.01), the number of parameters increases by only 1\% (111M), and the increase in inference latency is less than 4\% (8.5ms), which achieves a balance between performance and efficiency. In the cross-language migration test, the model achieves 58.9\% F1 in low-resource scenarios such as Tamil (&lt;1k samples), verifying the generalisation capability. The study achieves the first end-to-end joint optimisation of syntactic tree and representation learning, providing an efficient solution for low-resource multilingual NER tasks.},
booktitle = {Proceedings of the 2025 International Conference on Generative Artificial Intelligence for Business},
pages = {114–120},
numpages = {7},
keywords = {contrastive learning, cross-lingual migration, low-resource named entity recognition, prototype network, syntactic awareness},
location = {
},
series = {GAIB '25}
