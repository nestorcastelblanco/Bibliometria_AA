abstract = {What if you could have a chat with yourself? OpenAI’s introduction of custom GPTs in November 2023 provides an opportunity for non-technical users to create specialized generative artificial intelligence chatbots. Users can write prompts in plain language rather than code to instruct how the system should behave. What can one learn from using non-technical methods to develop a specific chatbot persona? To explore this, I conducted an autoethnography of my experience developing and interacting with a custom GPT based on myself. My findings include a discussion of my experiences throughout the process, and its impact on my personal introspection and understanding of prompt engineering. I summarize first-hand challenges and insights intended to inspire further discussion on the topic of generative AI and chatbots.},
booktitle = {Extended Abstracts of the CHI Conference on Human Factors in Computing Systems},
articleno = {40},
numpages = {9},
keywords = {autoethnography, chatbot, generative artificial intelligence, large language model, persona},
location = {Honolulu, HI, USA},
series = {CHI EA '24}
}

@inbook{10.1145/3728725.3728727,
author = {Li, Hao and Zhao, Jiahui and Gu, Daixuan},
title = {HoloDiT: Exploring 3D Diffusion Transformer Models Using 2D Images},
year = {2025},
isbn = {9798400713453},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3728725.3728727},
abstract = {Recently, Transformer-based diffusion models have produced impressive results in 3D shape generation. However, at this stage, they can only be trained using 3D point cloud data to generate simple 3D shapes based on point cloud representations. Building on this, we propose HoloDiT. It uses a set of real-world 2D images and corresponding camera poses as input, generating 3D auxiliary samples that are fed into a Transformer-based 3D diffusion model for training in 3D shape generation. By training the rendering function to generate color and density, we can restore the color details of object surfaces. This enables HoloDiT to generate realistic 3D shapes from 2D images. We trained on the real-world CO3Dv2 dataset, and the generated results demonstrate competitive quality and consistency compared to existing 3D generation models.},
booktitle = {Proceedings of the 2025 2nd International Conference on Generative Artificial Intelligence and Information Security},
pages = {7–11},
numpages = {5}
}

@inbook{10.1145/3728725.3728747,
author = {Li, Fengdi},
title = {MH-PEFT: Mitigating Hallucinations in Large Vision-Language Models through the PEFT Method},
year = {2025},
isbn = {9798400713453},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3728725.3728747},
abstract = {Large vision-language models (LVLMs) have achieved significant progress and been widely applied across various industries. However, a series of significant challenges have also been posed, such as the hallucination, where the generated attributes of a target are inconsistent with the information in the image. Recent works have primarily focused on improving generation performance by training the multimodal alignment module of the model with additional data. However, this approach incurs higher costs and introduces redundant information due to the reliance on large amounts of additional data. To address these challenges, we propose a novel multimodal mitigation framework, termed MH-PEFT. Specifically, we introduce an effective data augmentation strategy that leverages existing data to generate additional attribute-related information, thereby enhancing the model's generative capabilities. Furthermore, we develop a PEFT-based training approach specifically tailored to mitigate multimodal hallucination in LVLMs. Notably, our framework features a plug-and-play design, which enhances its robustness and facilitates its deployment in real-world scenarios. Extensive experiments demonstrate that our method achieves state-of-the-art performance across multiple benchmark datasets.},
booktitle = {Proceedings of the 2025 2nd International Conference on Generative Artificial Intelligence and Information Security},
pages = {137–142},
numpages = {6}
}

@inbook{10.1145/3728725.3728801,
author = {Wan, Xing and Johari, Juliana and Ruslan, Fazlina Ahmat},
title = {Transformed Variational Color Shift Algorithm for Interfering Text Image Recognition},
year = {2025},
isbn = {9798400713453},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3728725.3728801},
abstract = {One common data augmentation method used in text image recognition is color shift transformations. A widely used method is the Variational Color Shift (VCS), which can automatically predict a range of color shifts for each image. The algorithm has significant overfitting when applied to text images that are highly interfered with and contain noise, which hinders further improvements in text recognition accuracy. In this study, we submit a new transformed layer inside the VCS framework using cyclic boundary shifts over the text images. A new module, Transformed Variational Color Shift (TVCS) is proposed. This method integrates a generalized set of colors (the original dataset) in a manner that can transform the input dataset. The experimental results show that TVCS has superior recognition accuracy than VCS and has better robustness against interference. The algorithm proposed is innovative as the data augmentation of text images, especially in a noisy environment.},
booktitle = {Proceedings of the 2025 2nd International Conference on Generative Artificial Intelligence and Information Security},
pages = {486–490},
numpages = {5}
}

@inbook{10.1145/3728725.3728766,
author = {Liu, Sihan},
title = {VideoDreamBooth: Subject-Driven Video Editing with Guided Multi-Path Fusion},
year = {2025},
isbn = {9798400713453},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3728725.3728766},
abstract = {Diffusion models have gained popularity for generating content in various domains, including text, image, and video. In particular, Text-to-Image(T2I) models have emerged as an innovative tool for artistic expression. They also spurred growth in other associated areas, such as personalized subject generation and one-shot video editing. This paper presents VideoDreamBooth, a novel framework for real video editing with personalized subject. Inspired by the coarse-to-fine denoising nature of diffusion, we propose a multi-path fusion technique to preserve temporal consistency with original video. We also propose a metric (CLIP score ) to guide which denoising steps will conduct fusion. Our framework has proven to be effective and successful for video editing in various experimental settings.},
booktitle = {Proceedings of the 2025 2nd International Conference on Generative Artificial Intelligence and Information Security},
pages = {258–265},
numpages = {8}
}

