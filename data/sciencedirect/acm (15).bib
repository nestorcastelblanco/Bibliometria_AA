@inproceedings{10.1145/3677045.3685502,
author = {Sheahan, Jacob and Cardamone, Elisa and Vines, John},
title = {Exploring Generative Postcard Futures with Older Adults},
year = {2024},
isbn = {9798400709654},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3677045.3685502},
doi = {10.1145/3677045.3685502},
abstract = {Speculative approaches to technology-enabled futures of ageing often struggle against reductive and immaterial imaginaries that diverge from everyday realities. This is compounded by the mainstream embrace of generative artificial intelligence (AI) tools that reinforce many of the stigmas and biases we have long sought to reduce in technology studies. In seeking innovative ways to critique AI-generated futures and realize novel ways of speculating on the desirable, everyday futures older adults seek, we detail emergent findings from a series of workshops employing a generative postcard approach with a local community group in Scotland. Drawing on a previous analysis of opportunities to support care in later life through an ecological carescape framework, workshops captured precarious visions, generational perspectives, and potential ways of reconfiguring care futures. We highlight how the techno-deterministic visions of generative AI are both a feature and tool for critique as we link ageing futures with everyday realities of the present.},
booktitle = {Adjunct Proceedings of the 2024 Nordic Conference on Human-Computer Interaction},
articleno = {32},
numpages = {6},
keywords = {design fiction, futures, generative AI, older people},
location = {Uppsala, Sweden},
series = {NordiCHI '24 Adjunct}
}

@inproceedings{10.1145/3734921.3734929,
author = {Zhou, Wanzhen and Guo, Haohao and Wang, Jianxia},
title = {Development of a Child-Adult Binding Access Control System Using Face Recognition},
year = {2025},
isbn = {9798400713460},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/3734921.3734929},
doi = {10.1145/3734921.3734929},
abstract = {Aiming to address the need for child supervision in closed public spaces, this paper proposes an intelligent access control system based on face recognition. The system adopts lightweight MTCNN and MobileFaceNet algorithms to dynamically bind the identities of children and adults by generating unique ID codes (timestamp + random six-digit number). During entry, an adult generates an ID code via face detection and associates it with the child's information. During exit, a child can only pass if their ID code matches the associated adult's ID. Experimental results demonstrate that the system achieves a recognition accuracy of 99.93\%, a single binding time of 2.8 seconds, and a database response time of less than 10 ms under high concurrency (1000 QPS). This system enables accurate guardianship without pre-registration and effectively reduces the risk of children getting lost or being taken by unauthorized individuals.},
booktitle = {Proceedings of the 2025 International Conference on Generative Artificial Intelligence and Digital Media},
