# Configuración de Scrapers
# Copia este archivo a .env y ajusta los valores según tu entorno

# Modo headless para Chrome (true en producción/despliegue, false en desarrollo)
HEADLESS=true

# Límite de páginas a scrape (0 = todas, >0 = límite)
# En producción se recomienda un límite bajo para evitar timeouts
ACM_MAX_PAGES=5
SAGE_MAX_PAGES=5

# Forzar ejecución de scrapers incluso si existen datos previos (true/false)
FORCE_SCRAPING=false

# Timeout para operaciones de scraping (segundos)
SCRAPING_TIMEOUT=30
